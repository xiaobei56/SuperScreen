<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gridlife.cn.superscreen.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="************************************************************" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置显示内容" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="************************************************************" />

    <RadioGroup
        android:id="@+id/rg_select_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示文字"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_show_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片" />
        <RadioButton
            android:id="@+id/rb_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示时间" />

        <RadioButton
            android:id="@+id/rb_show_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示内存" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_show_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="设置显示文字" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_show_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="20dp"
        android:text="************************************************************" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置运动方式" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"

        android:text="************************************************************" />

    <RadioGroup
        android:id="@+id/rg_move_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_horizon_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="水平运动" />
        <RadioButton
            android:id="@+id/rb_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="静止" />
        <RadioButton
            android:id="@+id/rb_vertical_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="垂直运动" />

        <RadioButton
            android:id="@+id/rb_random_line_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="随机线运动" />

        <RadioButton
            android:id="@+id/rb_random_dot_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:checked="true"
            android:text="随机点运动" />

        <RadioButton
            android:id="@+id/rb_can_be_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="是否允许点击" />
    </RadioGroup>

</LinearLayout>
